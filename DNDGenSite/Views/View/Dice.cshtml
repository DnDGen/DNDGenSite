                <span><b>{{vm.rolls.percentile | number}}</b></span>
            </form>
        </div>
        <div class="flex-child">
            <form name="customForm">
                <input dndgen-no-decimals type="number" min="1" ng-model="vm.quantities.custom" class="dice-input" required />d<input dndgen-no-decimals type="number" min="1" ng-model="vm.customDie" class="dice-input" required />
                <button id="customButton" type="button" class="btn btn-success" ng-click="vm.rollCustom()" ng-disabled="customForm.$invalid">Roll</button>
                <span><b>{{vm.rolls.custom | number}}</b></span>
            </form>
        </div>
    </div>
</div>