                <span><b>{{rolls.percentile | number}}</b></span>
            </form>
        </div>
        <div class="flex-child">
            <form name="customForm">
                <input dndgen-no-decimals type="number" min="1" ng-model="quantities.custom" class="dice-input" required />d<input dndgen-no-decimals type="number" min="1" ng-model="customDie" class="dice-input" required />
                <button id="customButton" type="button" class="btn btn-success" ng-click="rollCustom()" ng-disabled="customForm.$invalid">Roll</button>
                <span><b>{{rolls.custom | number}}</b></span>
            </form>
        </div>
    </div>
</div>