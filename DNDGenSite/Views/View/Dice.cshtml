                <span><b>{{vm.rolls.d12 | number}}</b></span>
            </form>
        </div>
        <div class="flex-child">
            <form name="d20Form">
                <input dndgen-no-decimals type="number" min="1" ng-model="vm.quantities.d20" class="dice-input" required />d20
