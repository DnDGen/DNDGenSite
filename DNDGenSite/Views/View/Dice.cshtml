                <span><b>{{vm.rolls.d6 | number}}</b></span>
            </form>
        </div>
        <div class="flex-child">
            <form name="d8Form">
                <input dndgen-no-decimals type="number" min="1" ng-model="vm.quantities.d8" class="dice-input" required />d8
                <button id="d8Button" type="button" class="btn btn-success" ng-click="vm.rollD8()" ng-disabled="d8Form.$invalid">Roll</button>
