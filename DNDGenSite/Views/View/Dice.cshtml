@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section ngApp {
    ng-app='app.dice'
}

@section Scripts {
    <script src="~/Scripts/app/shared/shared.module.js"></script>
    <script src="~/Scripts/app/shared/noDecimals.directive.js"></script>
    <script src="~/Scripts/app/dice/dice.module.js"></script>
    <script src="~/Scripts/app/dice/diceService.js"></script>
    <script src="~/Scripts/app/dice/dice.js"></script>
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/Content/dice.css">
}

<div ng-controller="Dice as vm">
    <h1>D20 Dice</h1>
    <div class="flex-container top-buffer">
        <div class="flex-child">
            <form name="d2Form">
                <input dndgen-no-decimals type="number" min="1" ng-model="vm.quantities.d2" class="dice-input" required />d2
                <button id="d2Button" type="button" class="btn btn-success" ng-click="vm.rollD2()" ng-disabled="d2Form.$invalid">Roll</button>
                <span><b>{{vm.rolls.d2 | number}}</b></span>
            </form>
        </div>
        <div class="flex-child">
            <form name="d3Form">
                <input dndgen-no-decimals type="number" min="1" ng-model="vm.quantities.d3" class="dice-input" required />d3
                <button id="d3Button" type="button" class="btn btn-success" ng-click="vm.rollD3()" ng-disabled="d3Form.$invalid">Roll</button>
                <span><b>{{vm.rolls.d3 | number}}</b></span>
            </form>
        </div>
        <div class="flex-child">
            <form name="d4Form">
                <input dndgen-no-decimals type="number" min="1" ng-model="vm.quantities.d4" class="dice-input" required />d4
